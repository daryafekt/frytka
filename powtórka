#ZADANIE 7
I=1
V=5
X=10
L=50
C=100
D=500
M=1000

z1=input("Podaj liczbę rzymską 1: ")
z2=input("Podaj liczbę rzymską 2: ")
a1=0
b1=0
for i in range(z1.len()):
  if z1[i]=="I" : a1=a1+I
  if z1[i]=="X" : a1 = a1 + X
  if z1[i]=="V" : a1 = a1 + V
  if z1[i]=="L" : a1 = a1 + L
  if z1[i]=="C" : a1=a1+C
  if z1[i]=="D" : a1 = a1 + D
  if z1[i]=="M" : a1 = a1 + M
for i in range(z2.len()):
  if z2[i]=="I" in z1: b1=b1+I
  if z2[i]=="X" in z1: b1 = b1 + X
  if z2[i]=="V" in z1: b1 = b1 + V
  if z2[i]=="L" in z1: b1 = b1+ L
  if z2[i]=="C" in z1: b1=b1+C
  if z2[i]=="D" in z1: b1 = b1 + D
  if z2[i]=="M" in z1: b1 = b1 + M
  x1=b1+a1
