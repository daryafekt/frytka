#ZADANIE 1
a='My jestesmy krasnoludki, hopsasa, hopsasa'

j=a.find("j")
b=a[j:j+8]
print("Zmienna b ma wartość =", b)

c=a[-7:]
print("Zmienna c ma wartość =", c)

D=a[:2]
d=D.lower()
print("Zmienna d ma wartość =", d)

k=a.find("k")
i=a.find("i")
E=a[k:i+1]
e=E.upper()
print("Zmienna e ma wartość =", e)

print("Zmienna e(małe) ma wartość =", e.lower())

print("Zmienna d(duże) ma wartość =", d.capitalize())

print(d.capitalize(), b, e.lower() + ",", c + ",", c )

#ZADANIE 2
I="Rwdogrbnrimlnvsspponbnf"
N="gClkjrvrtudrusjfdoveseh"

Wi=I[::3]
print("Zmienna Wi ma wartość =", Wi)

Wn=N[1::4]
print("Zmienna Wn ma wartość =", Wn)

print(Wi, Wn)

#ZADANIE 3
